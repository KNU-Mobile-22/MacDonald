<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="20dp"
                android:src="@drawable/c101" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="치즈버거"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/singlebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFEB3B"
                        android:text="단품"
                        android:textColor="#FF0000"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/setbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="세트"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sidebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:enabled="false"
                android:text="사이드"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/sideimg"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/grayright" />

            <TextView
                android:id="@+id/sidetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff888888"
                android:textSize="25dp" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/sidelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/french_fries_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c202" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="후렌치\n후라이" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/coleslaw_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c205" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="코우슬로\n" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/cheese_stick_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c206" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="치즈스틱\n2조각" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/macnugget_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c208" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="맥너겟\n4조각" />
            </GridLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/drinkbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:enabled="false"
                android:text="음료"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/drinkimg"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/grayright" />

            <TextView
                android:id="@+id/drinktxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff888888"
                android:textSize="25dp" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/drinklay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:columnCount="4"
            android:orientation="horizontal"
            android:visibility="gone">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/coke_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c303" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="코카 콜라" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/sprite_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c306" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="스프라이트" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/cokezero_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c304" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="코카 콜라\n제로" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/spritezero_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c307" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="스프라이트\n제로" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/americano_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c405" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="아메리카노" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/latte_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c403" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="카페라떼" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/vanila_latte_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c401" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="바닐라 라떼" />
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/cappuccino_btn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c404" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="카푸치노" />
            </GridLayout>
        </GridLayout>


        <Button
            android:id="@+id/add_to_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="장바구니 추가"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>