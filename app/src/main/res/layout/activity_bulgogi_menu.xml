<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/help_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/help_msg"
        android:text=" 3. 버거를 선택하세요. "
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/bulgogi_115_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edge"
                android:orientation="vertical"
                android:padding="1dp"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/burger_115_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c115" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="더블 불고기\n버거"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5300원"
                    android:textSize="20dp" />
            </GridLayout>

            <GridLayout
                android:id="@+id/bulgogi_116_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edge"
                android:orientation="vertical"
                android:padding="1dp"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/burger_116_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c116" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="에그 불고기\n버거"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4300원"
                    android:textSize="20dp" />
            </GridLayout>

            <GridLayout
                android:id="@+id/bulgogi_117_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edge"
                android:orientation="vertical"
                android:padding="1dp"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/burger_117_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c117" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="불고기 버거\n"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3300원"
                    android:textSize="20dp" />
            </GridLayout>
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:text="주문내역"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/easy_orderList_bulgogi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bulgogi_complete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택완료"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/bulgogi_cancle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소하기"
                    android:textSize="30dp" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>